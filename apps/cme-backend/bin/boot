#!/bin/bash

# Stop on error
set -e

cd /home/node/app 
yarn install

echo 'export PATH="$(yarn global bin):$PATH"' >> /home/node/.bashrc
echo 'Building dist ...'
yarn run build:libs && yarn run build:app:api

echo 'Migrating databases ...'
(cd migrations && npx tsc)
yarn run migrate

yarn run start:${NODE_ENV:-prod}:api