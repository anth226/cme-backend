  "devDependencies": {
    "@nestjs/cli": "7.6.0",
    "@nestjs/schematics": "7.3.1",
    "@nestjs/testing": "7.6.15",
    "@typechain/ethers-v5": "^10.1.0",
    "@types/bcrypt": "3.0.0",
    "@types/jest": "26.0.22",
    "@types/js-yaml": "4.0.0",
    "@types/lodash": "^4.14.175",
    "@types/node": "^14.18.10",
    "@types/socket.io": "2.1.13",
    "@types/supertest": "2.0.11",
    "@types/ioredis": "5.0.0",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.2",
    "jest": "26.6.3",
    "jest-mock-extended": "1.0.13",
    "lint-staged": "^13.0.3",
    "prettier": "2.2.1",
    "supertest": "6.1.3",
    "ts-jest": "26.5.4",
    "ts-loader": "8.1.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "3.9.0",
    "typechain": "^8.1.0",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>",
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "moduleNameMapper": {
      "@app/redlock/(.*)": "<rootDir>/libs/redlock/src/$1",
      "@app/redlock": "<rootDir>/libs/redlock/src",
      "@app/scheduler/(.*)": "<rootDir>/libs/scheduler/src/$1",
      "@app/scheduler": "<rootDir>/libs/scheduler/src",
      "@app/configuration/(.*)": "<rootDir>/libs/configuration/src/$1",
      "@app/configuration": "<rootDir>/libs/configuration/src",
      "@app/blockchain": "<rootDir>/libs/blockchain/src",
      "@app/blockchain/(.*)": "<rootDir>/libs/blockchain/src/$1",
      "@app/game-rules/(.*)": "<rootDir>/libs/game-rules/src/$1",
      "@app/game-rules": "<rootDir>/libs/game-rules/src",
      "@app/errors": "<rootDir>/libs/errors/src",
      "@app/errors/(.*)": "<rootDir>/libs/errors/src/$1"
    }
  }
