  "scripts": {
    "build:libs": "nest build configuration && nest build redlock && nest build scheduler && nest build blockchain && nest build game-rules && nest build errors",
    "copy:config": "mkdir -p dist/config && cp config/* dist/config/",
    "build:app:api": "nest build cme-backend",
    "build:app:ups": "nest build units-production-scheduler",
    "build:app:up": "nest build units-producer",
    "build:app:bm": "nest build battles-manager",
    "build:app:resources-ms": "nest build resources-ms",
    "build:app:blockchain-ms": "nest build blockchain-ms",
    "build:lib:configuration": "nest build configuration",
    "build:lib:redlock": "nest build redlock",
    "build:lib:scheduler": "nest build scheduler",
    "build:lib:blockchain": "nest build blockchain",
    "build:lib:game-rules": "nest build game-rules",
    "build:lib:errors": "nest build errors",
    "clear": "rimraf dist",
    "clear:app:api": "rimraf dist/apps/cme-backend",
    "clear:app:ups": "rimraf dist/apps/units-production-scheduler",
    "clear:app:up": "rimraf dist/apps/units-producer",
    "clear:app:bm": "rimraf dist/apps/battles-manager",
    "clear:app:resources-ms": "rimraf dist/apps/resources-ms",
    "clear:app:blockchain-ms": "rimraf dist/apps/blockchain-ms",
    "clear:libs": "rimraf dist/libs",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev:api": "nest start --watch",
    "start:dev:ups": "nest start --watch units-production-scheduler",
    "start:dev:up": "nest start --watch units-producer",
    "start:dev:bm": "nest start --watch battles-manager",
    "start:dev:resources-ms": "nest start --watch resources-ms",
    "start:dev:blockchain-ms": "nest start --watch blockchain-ms",
    "start:prod:api": "nest start",
    "start:prod:ups": "nest start units-production-scheduler",
    "start:prod:up": "nest start units-producer",
    "start:prod:bm": "nest start battles-manager",
    "start:prod:resources-ms": "nest start resources-ms",
    "start:prod:blockchain-ms": "nest start blockchain-ms",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/cme-backend/test/jest-e2e.json",
    "pretypeorm": "node -r ts-node/register apps/cme-backend/src/scripts/generate-ormconfig.ts",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migrate": "yarn run typeorm migration:run",
    "prepare": "husky install"
  },
