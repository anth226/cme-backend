{
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/cme-backend/src",
  "compilerOptions": {
    "webpack": false,
    "tsConfigPath": "apps/cme-backend/tsconfig.app.json",
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "classValidatorShim": false,
          "introspectComments": true
        }
      }
    ]
  },
  "monorepo": true,
  "root": "apps/cme-backend",
  "projects": {
    "cme-backend": {
      "type": "application",
      "root": "apps/cme-backend",
      "entryFile": "main",
      "sourceRoot": "apps/cme-backend/src",
      "compilerOptions": {
        "tsConfigPath": "apps/cme-backend/tsconfig.app.json"
      }
    },
    "units-production-scheduler": {
      "type": "application",
      "root": "apps/units-production-scheduler",
      "entryFile": "main",
      "sourceRoot": "apps/units-production-scheduler/src",
      "compilerOptions": {
        "tsConfigPath": "apps/units-production-scheduler/tsconfig.app.json"
      }
    },
    "units-producer": {
      "type": "application",
      "root": "apps/units-producer",
      "entryFile": "main",
      "sourceRoot": "apps/units-producer/src",
      "compilerOptions": {
        "tsConfigPath": "apps/units-producer/tsconfig.app.json"
      }
    },
    "redlock": {
      "type": "library",
      "root": "libs/redlock",
      "entryFile": "index",
      "sourceRoot": "libs/redlock/src",
      "compilerOptions": {
        "tsConfigPath": "libs/redlock/tsconfig.lib.json"
      }
    },
    "scheduler": {
      "type": "library",
      "root": "libs/scheduler",
      "entryFile": "index",
      "sourceRoot": "libs/scheduler/src",
      "compilerOptions": {
        "tsConfigPath": "libs/scheduler/tsconfig.lib.json"
      }
    },
    "blockchain": {
      "type": "library",
      "root": "libs/blockchain",
      "entryFile": "index",
      "sourceRoot": "libs/blockchain/src",
      "compilerOptions": {
        "tsConfigPath": "libs/blockchain/tsconfig.lib.json"
      }
    },
    "configuration": {
      "type": "library",
      "root": "libs/configuration",
      "entryFile": "index",
      "sourceRoot": "libs/configuration/src",
      "compilerOptions": {
        "tsConfigPath": "libs/configuration/tsconfig.lib.json"
      }
    },
    "battles-manager": {
      "type": "application",
      "root": "apps/battles-manager",
      "entryFile": "main",
      "sourceRoot": "apps/battles-manager/src",
      "compilerOptions": {
        "tsConfigPath": "apps/battles-manager/tsconfig.app.json"
      }
    },
    "resources-ms": {
      "type": "application",
      "root": "apps/resources-ms",
      "entryFile": "main",
      "sourceRoot": "apps/resources-ms/src",
      "compilerOptions": {
        "tsConfigPath": "apps/resources-ms/tsconfig.app.json"
      }
    },
    "blockchain-ms": {
      "type": "application",
      "root": "apps/blockchain-ms",
      "entryFile": "main",
      "sourceRoot": "apps/blockchain-ms/src",
      "compilerOptions": {
        "tsConfigPath": "apps/blockchain-ms/tsconfig.app.json"
      }
    },
    "game-rules": {
      "type": "library",
      "root": "libs/game-rules",
      "entryFile": "index",
      "sourceRoot": "libs/game-rules/src",
      "compilerOptions": {
        "tsConfigPath": "libs/game-rules/tsconfig.lib.json"
      }
    },
    "errors": {
